datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  author    String?
  title     String?
  content   String?
  outline   String?
  status    EnumBookStatus?
}

model EBook {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  title     String?
  author    String?
  content   String?
  outline   String?
  status    EnumEBookStatus?
}

model YouTubeVideo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String?
  url         String?
  mainKeyword String?
  content     String?
}

model Article {
  id              String             @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  title           String?
  content         String?
  metaDescription String?
  metaTitle       String?
  metaSlug        String?
  status          EnumArticleStatus?
}

model Assistant {
  id        String               @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  name      String?
  role      EnumAssistantRole?
  status    EnumAssistantStatus?
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}

enum EnumBookStatus {
  Option1
}

enum EnumEBookStatus {
  Option1
}

enum EnumArticleStatus {
  Option1
}

enum EnumAssistantRole {
  Option1
}

enum EnumAssistantStatus {
  Option1
}
